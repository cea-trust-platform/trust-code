# Conduction 1D : une barre horizontale faite de deux materiaux  #
# PARALLEL OK 4 #
dimension 2

Pb_conduction pb
Domaine dom

# BEGIN MESH #
Lire_med family_names_from_group_names dom med_domain_1D domain_1D_quad.med
Read_file dom_ssz.geo ;
# END MESH #

# BEGIN PARTITION
Partition dom
{
	Partition_tool tranche { tranches 2 1 }
	Larg_joint 1
	zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

EF dis

Scheme_euler_implicit sch
Read sch
{
	tinit 0
	nb_pas_dt_max 3
	seuil_statio 1e-2
	facsec_max 100
	facsec 10
	solveur implicite { solveur gmres { diag seuil 1e-20 nb_it_max 3 } }

}

/*
Scheme_euler_explicit sch
Read sch
{
	tinit 0
	nb_pas_dt_max 3
	tmax 100.
	dt_min 0.00001
	dt_max 0.1
	dt_impr 0.00001
	dt_sauv 100
	seuil_statio 1e-2
}  */

Solide sol
Read sol
{
	rho       Champ_uniforme  1 1.0
  lambda    Champ_uniforme  1 3.0  # 3.0 #
  Cp        Champ_uniforme  1 1.0
}
Associate pb dom
Associate pb sch
Associate pb sol

Discretize pb dis

Read pb
{
	Conduction
	{
		diffusion { }
		initial_conditions {
			temperature Champ_Uniforme 1  0.0
			}
	  sources {  }
		boundary_conditions {
			Gauche paroi_temperature_imposee       Champ_Front_Uniforme 1 0.0
			Droit  paroi_echange_global_impose
			        h_imp champ_front_uniforme 1 2.0
			        T_ext champ_front_uniforme 1 10.0
		}
	}

	Post_processing
	{
		champs dt_post  1.0
		{
			temperature som
		}

 	  probes {
 	  /*  sonde_horiz temperature periode 1. segment 30 -0.983 0.5 0.983 0.5   # aux centres des elements #  */
  	  sonde_horiz som temperature periode 1. segment 21 -1.0 0.0 1.00 0.0   # sur les noeuds #
	  }

	}


}

Solve pb

End

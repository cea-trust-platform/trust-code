# Calcul 2D Thermohydraulique Test de Champ_Front_fonc_txyz #
# PARALLEL OK 8 #
dimension 2

Pb_thermohydraulique pb
Domaine dom

# BEGIN MESH #
Mailler dom
{
    Pave Cavite
    {
        Origine 0. 0.
        Nombre_de_Noeuds 41 11
        Longueurs 5. 1.
    }
    {
        Bord Gauche X = 0. 0. <= Y <= 1.
        Bord Haut   Y = 1. 0. <= X <= 5.
        Bord Bas    Y = 0. 0. <= X <= 5.
        Bord Droit  X = 5. 0. <= Y <= 1.
    }
}
# END MESH #

# BEGIN PARTITION
Partition dom
{
    Partition_tool metis { Nb_parts 2 }
    Larg_joint 1
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VDF dis

Scheme_euler_explicit sch
Read sch
{
    tinit 0.
    tmax 1.
    dt_min 0.00001
    dt_max 11
    dt_impr 0.01
    dt_sauv 100
    seuil_statio 1.e-8
}

Associate pb dom
Associate pb sch
Discretize pb dis

Read pb
{

    fluide_incompressible {
        gravite champ_uniforme 2 0 -9.81

        mu Champ_Uniforme 1 2
        rho Champ_Uniforme 1 2
        lambda Champ_Uniforme 1 0.0262
        Cp Champ_Uniforme 1 503
        beta_th Champ_Uniforme 1 3.41e-3
    }


    Navier_Stokes_standard
    {
        solveur_pression petsc cholesky {   }
        convection { amont }
        diffusion { }
        sources { boussinesq_temperature { T0 0. } }
        initial_conditions {
            vitesse Champ_Uniforme 2 0 0.
        }
        boundary_conditions {
            Haut paroi_fixe
            Bas paroi_fixe
            Gauche frontiere_ouverte_vitesse_imposee Champ_Front_fonc_txyz 2 10. 0.
            Droit frontiere_ouverte_pression_imposee champ_front_uniforme 1 0
        }
    }
    Convection_Diffusion_Temperature
    {
        diffusion { }
        convection { amont }
        boundary_conditions
        {
            Haut paroi_adiabatique
            Bas paroi_adiabatique
            Gauche frontiere_ouverte_temperature_imposee Champ_Front_fonc_txyz 1 (10*SIN(t))
            Droit  frontiere_ouverte T_ext  Champ_Front_Uniforme 1 0.
        }
        initial_conditions { Temperature Champ_fonc_xyz dom 1 0  }
    }

    Post_processing
    {   format lml
        Probes
        {
            sonde_temp temperature periode 0.01 points 1 1. 0.5
        }
        fields dt_post 10.
        {
            pression elem
            vitesse som
            temperature elem
        }
    }
}

Solve pb
End

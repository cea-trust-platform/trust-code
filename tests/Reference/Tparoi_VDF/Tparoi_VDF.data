# Conduction 2D : Diverses conditions limites thermiques #
# PARALLEL OK 2 #
dimension 2

Pb_conduction pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
	Pave Cavite 
 	{
		Origine 0. 0.
		Nombre_de_Noeuds 6 6
		Longueurs 1. 1.
	}
	{
		Bord Gauche X = 0. 0. <= Y <= 1.
		Bord Haut   Y = 1. 0. <= X <= 1.
		Bord Bas    Y = 0. 0. <= X <= 1.
		Bord Droit  X = 1. 0. <= Y <= 1.
	}
} 


# END MESH #
# BEGIN PARTITION
Partition dom
{
	Partition_tool tranche { tranches 2 1 }
	Larg_joint 1
	zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VDF dis

Scheme_euler_explicit sch
Read sch
{
	tinit 0
	tmax 300.
	dt_min 0.00001
	dt_max 0.1
	dt_impr 0.00001
	dt_sauv 100
	seuil_statio 1.e-8
}

Solide sol
Read sol
{
	rho Champ_Uniforme 1 2
	lambda Champ_Uniforme 1 0.01
	Cp Champ_Uniforme 1 0.5
}
Associate pb dom
Associate pb sch
Associate pb sol

Discretize pb dis

Read pb
{
	Conduction
	{
		diffusion { }
		initial_conditions {
			temperature Champ_Uniforme 1 0. 
			}
		boundary_conditions {
			Haut	paroi_echange_externe_impose	h_imp Champ_Front_Uniforme 1 0.1 T_ext Champ_Front_Uniforme 1 0.
			Bas 	paroi_temperature_imposee	Champ_Front_Uniforme 1 5.
			Droit 	paroi_flux_impose  		Champ_Front_Uniforme 1 10.2
			Gauche  echange_couplage_thermique { temperature_paroi Champ_uniforme 1 10 flux_paroi Champ_uniforme 1 0.1 }
		}
	}

	Post_processing
	{
		Probes
		{
			sonde temperature periode 5. points 1 0.45 0.45
		}
		format lml
		fields dt_post 30.
		{
			# temperature_paroi som #
			# temperature_paroi elem #
			temperature som
			temperature elem
		}
	}
}

Solve pb

End

# Decoupage 2D pour le parallele : exemple avec des sous zones d'un decoupage equilibre #
# PARALLEL OK #
dimension 2
Domaine dom

# BEGIN MESH #
Mailler dom
{
    Pave Cavite
    {
        Origine 0. 0.
        Nombre_de_Noeuds 8 8
        Longueurs 3. 3.
    }
    {
        Bord Perio 	X = 0.  0. <= Y <= 3.
        Bord Perio 	X = 3. 0. <= Y <= 3.
        Bord Perio2  	Y = 0.  0. <= X <= 3.
        Bord Perio2  	Y = 3.   0. <= X <= 3.
    }
}

Trianguler dom
# END MESH #

# BEGIN PARTITION
Sous_Zone processeur_0
Associate processeur_0 dom
Read processeur_0
{
    Rectangle
    Origine 0.75 0.
    Cotes   1.5 3
}

Partition dom
{
    Partition_tool sous_zones { sous_zones 1 processeur_0 }
    zones_name nom_zone
    Periodique 2 Perio Perio2
    Larg_joint 2
}
End
END PARTITION #

# BEGIN SCATTER
Scatter nom_zone.Zones dom
END SCATTER #

VEFPreP1B dis
Runge_Kutta_ordre_3 sch
Fluide_Incompressible eau
Pb_Hydraulique pb
Read sch
{
    tinit 0
    tmax 1.
    dt_min 0.0001
    dt_max 0.2
    dt_impr 0.1
    dt_sauv 100
    seuil_statio 1.e-10
    nb_pas_dt_max 3
}

Read eau
{
    mu Champ_Uniforme 1 0.002
    rho Champ_Uniforme 1 2
}

Associate pb dom
Associate pb sch
Associate pb eau

Discretize pb dis
Read pb
{
    Navier_Stokes_standard
    {
        solveur_pression GCP {
            precond_nul
            seuil 1.000000e-10
            impr
        }
        diffusion {  }
        convection { amont }
        initial_conditions {
            vitesse Champ_Uniforme 2 1. 1.
        }
        boundary_conditions {
            Perio periodique
            Perio2 periodique
        }
    }

    Post_processing
    {
        fields dt_post 100.
        {
            vitesse elem
            pression elem
        }
        Probes
        {
            vitx_moyenne vitesse  periode 0.5 segment 57   0. 0.   28. 0.
            vit_sortie   vitesse  periode 0.5 segment 28   28. -7. 28. 7.
            vit_entree   vitesse  periode 0.5 segment 28   0. -7.   0. 7.
            sonde_p      pression periode 0.5 segment 56  0. 0.   28. 0.
        }
    }
}

Solve pb
End




# Test Cholesky_petsc solver and its option #
# PARALLEL NOT #

dimension 3
Pb_Thermohydraulique pb
Domaine dom

# BEGIN MESH #
Read_file dom cylindre.geom
VerifierCoin dom { }
Dilate dom 1000
RegroupeBord dom Box { Surfanz Bas Haut Surfa }
OrienteFacesBord dom
# END MESH #

# BEGIN PARTITION
Partition dom
{
	Partitionneur metis { Nb_parts 9 }
	Larg_joint 2
	Nom_Zones DOM1
}
Fin
END PARTITION #

# BEGIN SCATTER
Scatter DOM1.Zones dom
END SCATTER #

VEFPreP1B ma_discretisation

Schema_Euler_explicite mon_schema
Lire mon_schema
{
	nb_pas_dt_max 5
	tinit 0
	tmax 5.0
	dt_min 1.e-6
	dt_max 1.e-6
	dt_impr 1.e-6
	dt_sauv 100
	seuil_statio 1.e-8
}

# A fluid is defined #
Fluide_Incompressible milieu
Lire milieu
{
	mu  Champ_Uniforme 1 0.01
	rho Champ_Uniforme 1 2.
        lambda Champ_Uniforme 1 2
        Cp Champ_Uniforme 1 100.
        beta_th Champ_Uniforme 1 0.	
}

Associate pb dom
Associate pb mon_schema
Associate pb milieu
Discretize pb ma_discretisation

Domaine Entree
Lire pb
{
	Navier_Stokes_standard
	{
		solveur_pression Petsc Cholesky_Lapack { factored_matrix disk }
		convection { muscl }
		diffusion { }
		conditions_initiales {
			vitesse Champ_Uniforme 3 1. 0. 0.
		}
		boundary_conditions {
			Cylindre 	paroi_fixe
			Box  		symetrie
			Sortie 		frontiere_ouverte_pression_imposee Champ_front_Uniforme 1 0.
			Entree 		frontiere_ouverte_vitesse_imposee  Champ_front_Uniforme 3 1. 0. 0.
		}
	}
        Convection_Diffusion_Temperature
        {
                diffusion { }
                convection { muscl }
                boundary_conditions
                {
			Cylindre 	paroi_temperature_imposee Champ_front_Uniforme 1 30.
			Box 		symetrie
			Sortie 		frontiere_ouverte_temperature_imposee Champ_front_Uniforme 1 20.
			Entree 		frontiere_ouverte_temperature_imposee Champ_front_Uniforme 1 20.
                }
                conditions_initiales { Temperature Champ_Uniforme 1 20. }
        }
	Postraitement
	{
	      	Champs dt_post 1.
	      	{ 
		      	pression_pa elem
		      	pression_pa som
	      	}
	      	Statistiques dt_post 1.
	      	{
		      	t_deb 0. t_fin 10.
		      	Moyenne vitesse elem
	      	}
	}
	resume_last_time binaire first_pb.sauv
}
Solve pb

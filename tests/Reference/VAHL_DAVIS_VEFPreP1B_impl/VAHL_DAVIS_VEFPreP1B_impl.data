# Thermohydraulique 2D VEF Boussinesq #
# PARALLEL OK #
dimension 2
Pb_Thermohydraulique pb
Domaine dom
# BEGIN MESH #

Mailler dom
{
	Pave Cavite 
		{
		Origine 0. 0.
     		Nombre_de_Noeuds 11 11
		Longueurs 0.01 0.01
		}
		{
		Bord Gauche X = 0.  0. <= Y <= 0.01
		Bord Haut Y = 0.01  0. <= X <= 0.01
		Bord Bas Y = 0.     0. <= X <= 0.01
		Bord Droit X = 0.01 0. <= Y <= 0.01
		}
}

Trianguler_H dom

# END MESH #


# BEGIN PARTITION
Partition dom
{
	Partition_tool metis { Nb_parts 2 }
	Larg_joint 2
	zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis

Scheme_euler_implicit sch
Read sch
{
	tinit 0.
	tmax 1000
	nb_pas_dt_max 10000
	dt_min 1e-8
	dt_max 1e-1
	dt_impr 1e-8
	dt_sauv 100
	seuil_statio 1.e-5
	facsec_max 100
	max_iter_implicite 50
	Solveur 
           Implicite 
	   {
		seuil_convergence_solveur 1.e-8
		solveur PETSC BICGSTAB { precond PILUT { level 20 epsilon 0.01 } seuil 1.e-8 impr }
	   }
}

Fluide_Incompressible fluide
Read fluide
{
	mu Champ_Uniforme 1 1.85e-5
	rho Champ_Uniforme 1 1.17
	lambda Champ_Uniforme 1 0.0262 
	Cp Champ_Uniforme 1 1006
	beta_th Champ_Uniforme 1 3.6e-3
}

Champ_Uniforme gravite
Read gravite 2 0 -9.81

Associate fluide gravite
Associate pb dom
Associate pb sch
Associate pb fluide

Discretize pb dis

Read pb
{
	Navier_Stokes_standard
	{
		solveur_pression PETSC cholesky { }
		convection { amont }
		diffusion { }
		sources { boussinesq_temperature { T0 278.15 } }
		initial_conditions {
			vitesse Champ_Uniforme 2 0. 0.
			}
		boundary_conditions {
			Haut paroi_fixe
			Bas paroi_fixe
			Gauche paroi_fixe
			Droit paroi_fixe
		}
	}
	Convection_Diffusion_Temperature
	{
		diffusion { }
		convection { amont }
		boundary_conditions 
		{
			Haut paroi_adiabatique
			Bas paroi_adiabatique
 			Gauche Paroi_temperature_imposee Champ_Front_Uniforme 1 283.15
			Droit Paroi_temperature_imposee Champ_Front_Uniforme 1 273.15
		}
		initial_conditions { Temperature Champ_Uniforme 1 278.15 }
	}

	Post_processing
	{
		Probes
		{
                        vitesse vitesse periode 0.001 point 1 0.005 0.005
                        temperature temperature periode 0.001 point 1 0.005 0.005
                        pression pression periode 0.001 point 1 0.005 0.005

			sonde_vity vitesse periode 0.001 segment 10 0. 0.005 0.01 0.005
			sonde_vitx vitesse periode 0.001 segment 10 0.005 0. 0.005 0.01
			sonde_tempy temperature periode 0.001 segment 10 0. 0.005 0.01 0.005
			sonde_tempx temperature periode 0.001 segment 10 0.005 0. 0.005 0.01
			pressure_vertex som pression periode 0.001 point 1 0.0001 0.0001
		}
		
		Format lml
		fields nb_pas_dt_post 50
		{
			pression elem
			pression som
			vitesse som
			temperature som
			h_echange_273 elem
		}
	}
}

Solve pb
End


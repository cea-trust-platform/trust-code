# Thermohydraulique 3D turbulent sous maille et Boussinesq #
# PARALLEL OK #
dimension 3
Pb_Thermohydraulique_Turbulent pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
	Pave Cavite 
		{
		Origine 0. 0. 0.
     		Nombre_de_Noeuds 51 51 51
		Longueurs 0.01 0.01 0.003
		}
		{
		Bord Gauche X = 0.    0. <= Y <= 0.01 0. <= Z <= 0.003
		Bord Haut   Y = 0.01  0. <= X <= 0.01 0. <= Z <= 0.003
		Bord Bas    Y = 0.    0. <= X <= 0.01 0. <= Z <= 0.003
		Bord Droit  X = 0.01  0. <= Y <= 0.01 0. <= Z <= 0.003
		Bord Sud    Z = 0.    0. <= X <= 0.01 0. <= Y <= 0.01
		Bord Nord   Z = 0.003 0. <= X <= 0.01 0. <= Y <= 0.01
		}
}

      
# END MESH #
# BEGIN PARTITION
Partition dom
{
	Partitionneur tranche { tranches 2 1 1 }
	Larg_joint 2
	Nom_Zones DOM
}
Fin
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VDF dis

Schema_Euler_explicite sch
Lire sch
{
	tinit 0.
	tmax 1.2
	dt_min 0.00001
	nb_pas_dt_max 3
	dt_max 10.    
	dt_impr 0.00001
	dt_sauv 100
	seuil_statio 1.e-8
	no_check_disk_space
}

Fluide_Incompressible fluide
Lire fluide
{
	mu Champ_Uniforme 1 1.85e-5
	rho Champ_Uniforme 1 1.17
	lambda Champ_Uniforme 1 0.0262 
	Cp Champ_Uniforme 1 1006
	beta_th Champ_Uniforme 1 3.41e-3
}

Champ_Uniforme gravite
Lire gravite 3 0 -9.81 0

Associate fluide gravite
Associate pb dom
Associate pb sch
Associate pb fluide

Discretize pb dis

Lire pb
{
	Navier_Stokes_turbulent 
	{
		solveur_pression GCP { precond ssor { omega 1.500000 } seuil 1.000000e-15 impr }
		convection { quick }
		diffusion { }
		sources { boussinesq_temperature { T0 5. } }
		conditions_initiales {
			vitesse champ_fonc_xyz dom 3 y -x 0
			}
		boundary_conditions {
			Haut paroi_fixe
			Bas paroi_fixe
			Gauche paroi_fixe
			Droit paroi_fixe
			Sud Symetrie
			Nord Symetrie
		}
		modele_turbulence sous_maille 
		{
			Turbulence_paroi loi_standard_hydr
		}
	}
	Convection_Diffusion_Temperature_Turbulent
	{
		diffusion { }
		convection { quick }
		boundary_conditions 
		{
			Haut paroi_adiabatique
			Bas paroi_adiabatique
 			Gauche paroi_temperature_imposee  Champ_Front_Uniforme 1 10. 
			Droit paroi_temperature_imposee  Champ_Front_Uniforme 1 0. 
			Sud Symetrie
			Nord Symetrie
		}
		conditions_initiales { Temperature Champ_Uniforme 1 5. }
		modele_turbulence Prandtl { Turbulence_paroi loi_standard_hydr_scalaire }
	}

	Postraitement
	{
		format lata
		Champs dt_post 0.1
		{
			temperature elem
		}
	}
}
EcritureLectureSpecial 0
Solve pb
Fin

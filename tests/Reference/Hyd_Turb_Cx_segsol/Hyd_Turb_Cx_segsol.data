# Hydraulique 3D D=1m U=1 m/s Re=100000 #
# PARALLEL OK #

dimension 3

Pb_Hydraulique_turbulent pb
Domaine dom

# BEGIN MESH #
Read_file dom cylindre.geom
VerifierCoin dom { }
Dilate dom 1000
# END MESH #

# BEGIN PARTITION
Partition dom
{
	Partitionneur metis { Nb_parts 2 }
	Larg_joint 2
	Nom_Zones DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B ma_discretisation

Scheme_euler_implicit mon_schema
Read mon_schema
{
	nb_pas_dt_max 1
	tinit 0
	tmax 100.
	dt_min 1.e-6
	dt_max 100.
	dt_impr 1.e-6
	dt_sauv 100
	seuil_statio 1.e-2
	facsec_max 100
	max_iter_implicite 50
	
	Solveur 
           Simple
	   {
		seuil_convergence_solveur 1.e-8
		relax_pression 0.01
	   }
}

Fluide_Incompressible milieu
Read milieu
{
	mu  Champ_Uniforme 1 0.00002
	rho Champ_Uniforme 1 2.
}

Associate pb dom
Associate pb mon_schema
Associate pb milieu
Discretize pb ma_discretisation

Read pb
{
	Navier_Stokes_turbulent
	{
		solveur_pression GCP { 
			precond ssor { omega 1.5 } 
			seuil 1.e-08
		}
		
		convection { muscl }
		diffusion { }
		conditions_initiales { vitesse Champ_Uniforme 3 1. 0. 0. }
		
		boundary_conditions {
			Cylindre paroi_fixe
			Surfanz symetrie
			Surfa  symetrie
		      	Bas  symetrie
			Haut symetrie
			Sortie frontiere_ouverte_pression_imposee Champ_front_Uniforme 1 0.
			Entree frontiere_ouverte_vitesse_imposee Champ_front_Uniforme 3 1. 0. 0.
		}
		
		modele_turbulence K_Epsilon
      		{ 
			Transport_K_Epsilon {
			      
                             convection { amont }
                             diffusion { }
			     
                             boundary_conditions 
			     {
			       Cylindre paroi
			       Surfanz symetrie
			       Surfa  symetrie
		      	       Bas  symetrie
			       Haut symetrie
			       Sortie frontiere_ouverte k_eps_ext Champ_front_Uniforme 2 0.005 0.0005
 			       Entree frontiere_ouverte_k_eps_impose Champ_front_Uniforme 2 0.005 0.0005
                             }
			     
                             conditions_initiales { k_eps Champ_Uniforme 2 0.005 0.0005 }
                        }
       		 turbulence_paroi loi_standard_hydr dt_impr_ustar 1
       		} 
	}

	Postraitement
	{
		Sondes
		{
	       	  sonde_pression pression_pa periode 0.005 circle 11 0. 0. 0. 2 0.7 0. 360.
		  sonde_vitesse vitesse periode 0.005 point 1 0.7 0. 0.
		}
		
		Format lml
		Champs dt_post 1.
		{ 
		  pression_pa elem
		  pression_pa som
		  vitesse elem
		  viscosite_turbulente elem
		}
			
	}
	
}

Solve pb
End

# Hydraulique 2D : Poiseuille 2D  P variable #
# PARALLEL OK #
# P en entree varie de 0 a 1 puis est constant , P au mileu varie de 0 a 0.5 puis est constant #
dimension 2
Pb_hydraulique pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
    Pave Entree
    {
        Origine 0. 0.
        Nombre_de_Noeuds  6 6
        Longueurs 1 1
    }
    {
        bord Entree X = 0.   0. <= Y <= 1.0
        bord Haut   Y = 1.0  0. <= X <= 1.0
        bord Haut  Y = 0.   0. <= X <= 1.0
        bord Sortie X = 1.0  0. <= Y <= 1.0
    }
}
trianguler_h dom
# END MESH #
# BEGIN PARTITION
Partition dom
{
    Partition_tool tranche { tranches 2 1 }
    Larg_joint 2
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #
VEFprep1b dis

Scheme_euler_implicit sch
Read sch
{
    tinit 0
    tmax 5000.
    dt_min 0.0001e-5
    dt_start dt_calc
    dt_max 1.0
    dt_sauv 100
    seuil_statio 1.e-6
    solveur piso { seuil_convergence_solveur 1e-8 }
    facsec 10
}


Champ_Uniforme gravite
Read gravite 2 0 0
Associate pb dom
Associate pb sch
Discretize pb dis
# Debog pb seq faces 1.e-6 0 #
Read pb
{

    fluide_incompressible {
        mu Champ_Uniforme 1 1.
        rho Champ_Uniforme 1 1.
    }


    Navier_Stokes_standard
    {
        solveur_pression GCP  { precond ssor { omega 1.5 } seuil 1e-13 }

        convection { negligeable }
        diffusion { }
        initial_conditions {
            vitesse Champ_Uniforme 2 0. 0.
        }
        boundary_conditions {
            Haut paroi_fixe
            Entree frontiere_ouverte_pression_imposee Champ_Front_fonc_txyz 1 (t*(t<1)+(t>1))
            Sortie frontiere_ouverte_pression_imposee Champ_Front_Uniforme 1 0.
        }
    }
    Post_processing
    {
        format lml
        Probes
        {
            seg_P pression periode 0.1 segment 20 0.025 0.5 0.975 0.5
            seg_U1 vitesse periode 0.1 segment 11 0. 0.5 1.0 0.5
            seg_U2 vitesse periode 0.1 segment 19 1.0 0.02631 1.0 0.9736
            sonde_pression pression periode 0.1 points 1 0.5 0.5
            sonde_vitesse  vitesse periode 0.1 points 1 0.5 0.5
        }
        fields dt_post .25
        {
            pression elem
            pression som
            vitesse elem
            vitesse som
            gradient_pression elem
        }
    }
}
Solve pb
End
End

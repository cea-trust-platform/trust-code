# test vorticite #
# PARALLEL OK #

Dimension 2
Pb_conduction pb2

Domaine dom

# BEGIN MESH #
Lire_med family_names_from_group_names dom mesh_tri_1 mesh_tri_1.med
# END MESH #
# BEGIN PARTITION
Partition dom
{
        Partition_tool metis { nb_parts 2  }
        Larg_joint 2
        zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis


Schema_Euler_explicite sch2
Lire sch2
{
	tinit 0
	nb_pas_dt_max 0
	dt_min 1e-6
	dt_max 1e+6
	dt_impr 1e-6
	facsec 1
	precision_impr 8
	seuil_statio 1e-9
}


Solide sol
Lire sol
{
 	rho champ_uniforme 1 1
	lambda champ_uniforme 1 1
	Cp champ_uniforme 1 1
}


Associer pb2 dom
Associer pb2 sch2
Associer pb2 sol
Discretiser pb2 dis


Lire pb2
{
	Conduction
	{
		Diffusion		{ }
		Conditions_initiales	{
					temperature champ_uniforme 1 0
					}
		Conditions_limites	{
					Gauche	frontiere_ouverte_temperature_imposee champ_front_uniforme 1 0
					Droite	frontiere_ouverte_temperature_imposee champ_front_uniforme 1 0
					Bas	frontiere_ouverte_temperature_imposee champ_front_uniforme 1 0
					Haut	frontiere_ouverte_temperature_imposee champ_front_uniforme 1 0
					}
		Sources			{ puissance_thermique champ_fonc_xyz dom  1 10. }
	}
	Postraitement
	{
		Definition_champs	{

S Champ_Post_Operateur_Eqn  { numero_source 0 sources { refChamp { pb_champ pb2 temperature }  } } 

					}
		Format lata
		Champs binaire dt_post 1e+6
					{
					S faces
					}
	}
}

Resoudre pb2

Fin

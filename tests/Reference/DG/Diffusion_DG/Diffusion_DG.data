# Conduction 2D : Diverses conditions limites thermiques #
# PARALLEL OK 8 #
dimension 2

Pb_conduction pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
    Pave Cavite
    {
        Origine 0. 0.
        Nombre_de_Noeuds 11 11
        Longueurs 1. 1.
    }
    {
        Bord Gauche X = 0. 0. <= Y <= 1.
        Bord Haut   Y = 1. 0. <= X <= 1.
        Bord Bas    Y = 0. 0. <= X <= 1.
        Bord Droit  X = 1. 0. <= Y <= 1.
    }
}

Trianguler dom


# END MESH #
# BEGIN PARTITION
Partition dom
{
    Partition_tool tranche { tranches 2 1 }
    Larg_joint 1
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

DG dis

Option_DG 
{
	order 1
}


Scheme_euler_explicit sch_expl
Read sch_expl
{
    tinit 0
    tmax 300.
    dt_min 0.0001
    dt_max 0.1
    dt_impr 1.e-8
    facsec 0.5
    seuil_statio 1.e-8
}

Schema_euler_implicite sch_impl
Read sch_impl
{
    tinit   0
    dt_max  0.5
    facsec 1e30
    seuil_statio 1e-8
    solveur implicite { solveur petsc cholesky { } }
}

Associate pb dom
Associate pb sch_impl
Discretize pb dis

Read pb
{

    solide {
        rho Champ_Uniforme 1 2.
        lambda Champ_Uniforme 1 0.01
        Cp Champ_Uniforme 1 1.
    }

    Conduction
    {
        diffusion { }
        initial_conditions {
            temperature Champ_Fonc_XYZ dom 1 sin(2*pi*x)*sin(2*pi*y)
        }
        boundary_conditions {
            Bas paroi_temperature_imposee Champ_Front_Uniforme 1 0. 
            Haut paroi_temperature_imposee Champ_Front_Uniforme 1 0. 
            Droit paroi_temperature_imposee Champ_Front_Uniforme 1 0. 
            Gauche paroi_temperature_imposee Champ_Front_Uniforme 1 0. 
        }
    }

    Post_processing
    {
				format lata
        fields dt_post 1
        {
            temperature elem
        }
    }
}


Solve pb
End

# Conduction 2D : Diverses conditions limites thermiques #
# PARALLEL OK 8 #
dimension 2

Pb_conduction pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
    Pave Cavite
    {
        Origine 0. 0.
        Nombre_de_Noeuds 201 201
        Longueurs 1. 1.
    }
    {
        Bord Gauche X = 0. 0. <= Y <= 1.
        Bord Haut   Y = 1. 0. <= X <= 1.
        Bord Bas    Y = 0. 0. <= X <= 1.
        Bord Droit  X = 1. 0. <= Y <= 1.
    }
}

Trianguler_h dom


# END MESH #
# BEGIN PARTITION
Partition dom
{
    Partition_tool tranche { tranches 2 1 }
    Larg_joint 1
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

DG dis

Option_DG 
{
	order 2
}


Scheme_euler_explicit sch_expl
Read sch_expl
{
    tinit 0
    nb_pas_dt_max 200
    tmax 300.
    facsec 1
    # dt_min 0.00000001 # 
    dt_max 0.01
    dt_impr 1.e-8
    seuil_statio 1.e-6
}

Schema_euler_implicite sch_impl
Read sch_impl
{
    tinit   0
    dt_max  0.5
    facsec 1e30
    seuil_statio 1e-6
    solveur implicite { solveur petsc cholesky { } }
}

Associate pb dom
Associate pb sch_impl
Discretize pb dis

Read pb
{

    solide {
        rho Champ_Uniforme 1 1.
        lambda Champ_Uniforme 1 0.01
        Cp Champ_Uniforme 1 1.
    }

    Conduction
    {
        diffusion { }
        initial_conditions {
            temperature Champ_Fonc_xyz dom 1 sin(2*pi*x)*sin(2*pi*y)
        }
         sources {
        Puissance_thermique champ_fonc_xyz dom 1 0.08*pi*pi*sin(2.*pi*x)*sin(2.*pi*y)
        }  
        boundary_conditions {
            Bas temperature_imposee_paroi Champ_Front_Uniforme 1 0. 
            Haut temperature_imposee_paroi Champ_Front_Uniforme 1 0. 
            Droit temperature_imposee_paroi Champ_Front_Uniforme 1 0. 
            Gauche temperature_imposee_paroi Champ_Front_Uniforme 1 0. 
        }
    }

    Post_processing
    {

				Definition_champs
    	    {
						solution transformation {
							Localisation ELEM
							methode formule expression 1 sin(2*pi*x)*sin(2*pi*y)
						}
    	      
						erreur transformation
    	      {
    	          methode formule expression 1 abs(temp-solution)
								localisation ELEM
								sources 
								{
								refChamp { Pb_champ pb temperature nom_source temp } 
								}
								sources_reference { solution }
						}
						L2_norm reduction_0D {
    	            methode L2_norm
									sources_reference { erreur }
    	        }
    	      
						L1_norm reduction_0D {
    	            methode L1_norm
									sources_reference { erreur }
    	        } 
						
						Linf_norm reduction_0D {
    	            methode max
									sources_reference { erreur }
    	        } 

    	   					}

					 Probes			{
    	        L2_norm 	L2_norm 	periode 1e+6 numero_elem_sur_maitre 0
    	        L1_norm 	L1_norm 	periode 1e+6 numero_elem_sur_maitre 0
    	        Linf_norm 	Linf_norm 	periode 1e+6 numero_elem_sur_maitre 0
    	    }


    	    format LATA
    	    fields dt_post 30.
    	    {
    		      temperature ELEM
    	        solution ELEM
    	        erreur ELEM
							Puissance_volumique ELEM 
							rho_cp_elem ELEM 
    	    }
		}
}


Solve pb
End

# Hydraulique 3D : Calcul de Cx au tour d'un cyclindre D=1m H=3m U=1m/s Re=2e5 #
# Voir le fichier verifie #
# PARALLEL NOT #

dimension 3

Pb_hydraulique_turbulent pb
Domaine dom

# BEGIN MESH #
Read_file dom cylindre.geom
VerifierCoin dom { }
Dilate dom 1000
# END MESH #

# On fait sur 9 procs pour verifier la non regression de la FA408 #
# BEGIN PARTITION
Partition dom
{
	Partition_tool metis { Nb_parts 9 }
	Larg_joint 2
	zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

# Je choisis une discretisation #
VEFPreP1B ma_discretisation

Scheme_euler_implicit mon_schema
Read mon_schema
{
	tinit 442.766972
	nb_pas_dt_max 1
	dt_min 1.e-6
	dt_impr 1.e-6	
	facsec		1315
	facsec_max	5000	
	solveur piso
	{
	   seuil_convergence_solveur	1.e-8
	   seuil_convergence_implicite	1.e-1
	}	
	seuil_statio 1.e-4
}

# Je definis un milieu #
Fluide_Incompressible milieu
Read milieu
{
	mu  Champ_Uniforme 1 1.e-5
	rho Champ_Uniforme 1 2.	
}

Associate pb dom
Associate pb mon_schema
Associate pb milieu
Discretize pb ma_discretisation

Read pb
{
	Navier_Stokes_turbulent
	{
		solveur_pression GCP { 
			precond ssor { omega 1.500000 } 
			seuil 1.000000e-6
			impr 
		}
		convection { muscl }
		diffusion { }
		initial_conditions {
			vitesse Champ_Uniforme 3 1. 0. 0.
			}
		boundary_conditions {
			Cylindre 	paroi_fixe
			Surfanz 	symetrie
			Surfa  		symetrie
		      	Bas  		symetrie
			Haut 		symetrie
			Sortie 		frontiere_ouverte_pression_imposee Champ_front_Uniforme 1 0.
			Entree 		frontiere_ouverte_vitesse_imposee Champ_front_Uniforme 3 1. 0. 0.
		}

        	modele_turbulence K_Epsilon {
                	 Transport_K_Epsilon
                	 {
                        	 convection { amont }
                        	 diffusion { }
                        	 boundary_conditions {
					Cylindre	Paroi
					Surfanz		symetrie
					Surfa  		symetrie
		      			Bas  		symetrie
					Haut 		symetrie
					Sortie 		frontiere_ouverte K_EPS_EXT Champ_Front_Uniforme 2 0. 0.
					Entree 		frontiere_ouverte_K_eps_impose Champ_front_Uniforme 2 0.01 0.01
                        	 }
                        	 initial_conditions {
                                	 k_Eps Champ_Uniforme 2 0.01 0.01
                        	 }
                	  }
                	  turbulence_paroi loi_standard_hydr dt_impr_ustar 1.e-6
        	 }
        }
	Post_processings
	{
		lml
		{
			format lml
			fichier Cx_impl
			Probes
			{
				sonde_vitesse vitesse periode 0.005 point 1 0.7 0. 0.
			}
			fields dt_post 1.
			{ 
				pression_pa elem
			}
		}
		lata
		{
			format lata
			fichier Cx_impl
			fields dt_post 1.
			{ 
				pression_pa elem
				vitesse elem
				viscosite_turbulente elem
				k elem
				eps elem
			}
		}		
	}
	reprise formatte Cx_impl.sauv
}
Imprimer_flux dom { Cylindre }
Solve pb
# Affichage du Cx #
System "./verifie -v"
End
tinit 442.766972

# Conduction 2D VEF : Conditions echange impose #
# Temperature prevue sur le bord droit : 5° #
# PARALLEL OK 8 #
dimension 2

Pb_conduction pb
Domaine dom

# BEGIN MESH #
Mailler dom
{
	Pave Cavite 
 	{
		Origine 0. 0.
		Nombre_de_Noeuds 11 11 
		Longueurs 1. 1.
	}
	{
		Bord Gauche X = 0. 0. <= Y <= 1.
		Bord Haut   Y = 1. 0. <= X <= 1.
		Bord Bas    Y = 0. 0. <= X <= 1.
		Bord Droit  X = 1. 0. <= Y <= 1.
	}
} 

trianguler dom
# END MESH #
# BEGIN PARTITION
Partition dom
{
	Partition_tool metis { Nb_parts 2 }
	Larg_joint 2
	zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis

Scheme_euler_explicit sch
Read sch
{
	nb_pas_dt_max 10
	tinit 0
	tmax 300.
	dt_min 0.00001
	dt_max 0.1
	dt_impr 0.1
	dt_sauv 100
	seuil_statio 1.e-8
	facsec 0.9375
}

Solide sol
Read sol
{
	rho Champ_Uniforme 1 2
	lambda Champ_Uniforme 1 0.01
	Cp Champ_Uniforme 1 0.5
}
Associate pb dom
Associate pb sch
Associate pb sol

Discretize pb dis

Read pb
{
	Conduction
	{
		diffusion { }
		initial_conditions {
			temperature Champ_Uniforme 1 0. 
			}
		boundary_conditions {
			Haut paroi_adiabatique
			Bas paroi_adiabatique
			Droit paroi_echange_externe_impose T_ext Champ_Front_Uniforme 1 10. H_imp Champ_Front_Uniforme 1 0.01
			Gauche paroi_temperature_imposee Champ_Front_Uniforme 1 0
		}
	}

	Post_processing
	{
		Probes
		{
			sonde_T temperature periode 5. points 1 1.0 0.5
		}
		fields dt_post 30.
		{
			temperature som
		}
	}
}
Solve pb
End

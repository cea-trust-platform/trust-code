# Exemples de Champ_fonc_reprise #
# PARALLEL OK 8 #
dimension 2
Pb_thermohydraulique_turbulent pb
Domaine dom
# BEGIN MESH #
Read_file dom keps_2D_VEF_Def.geom
VerifierCoin dom { }
# END MESH #

# BEGIN PARTITION
Partition dom
{
	Partitionneur metis { Nb_parts 2 }
	Larg_joint 2
	Nom_Zones DOM
}
Fin
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis

Schema_Euler_explicite sch
Lire sch
{
	tinit 0.
        tmax 2.
	dt_start dt_calc
	dt_max 0.1
	dt_impr 0.0001
        nb_pas_dt_max 2
	dt_sauv 20
        seuil_statio 1.e-8
}

Fluide_Incompressible fluide
Lire fluide
{
	mu Champ_Uniforme 1 2e-5
	rho Champ_Uniforme 1 1.
	lambda Champ_Uniforme 1 0.1
	cp Champ_Uniforme 1 2
	beta_th Champ_Uniforme 1 0	
}

Champ_Uniforme gravite
Lire gravite 2 0 -9.81

Associate fluide gravite
Associate pb dom
Associate pb sch
Associate pb fluide

Discretize pb dis

# On dilate le domaine par 1000 et on utilise Champ_fonc_reprise #
# Exemple ou l'on change d'unites: on passe de m en mm #
# La vitesse est multipliee par 1000 #
# rho et k sont multiples par 1000 #
# T est passe °C en K #
Lire pb
{
	Navier_Stokes_turbulent
	{
		solveur_pression GCP { precond ssor { omega 1.6 } seuil 1e-06 impr }
		convection { muscl }
		diffusion { }
		conditions_initiales { vitesse Champ_Fonc_Reprise keps_2D_VEF_Def_pb.xyz pb vitesse fonction 2 1000*val 1000*val last_time }
                boundary_conditions {
			HAUT paroi_defilante Champ_Front_Uniforme 2 1000. 1.
			BAS paroi_fixe
			EST paroi_fixe
			OUEST paroi_fixe
                }
                modele_turbulence K_Epsilon {
                        Transport_K_Epsilon 
                        {
                                convection { muscl }
                                diffusion { }
                                boundary_conditions {
			        HAUT paroi
			        BAS paroi
			        EST paroi
			        OUEST paroi
                         }
                         conditions_initiales { k_Eps Champ_Fonc_Reprise keps_2D_VEF_Def_pb.xyz pb K_Eps fonction 2 1000*val 1000*val last_time }
                         }
                         turbulence_paroi loi_standard_hydr
                } 
		
	}
        Convection_Diffusion_Temperature_Turbulent
        {
                diffusion { }
                convection { muscl }
                boundary_conditions
                {
                        HAUT paroi_adiabatique
                        BAS paroi_adiabatique
                        EST Paroi_temperature_imposee Champ_Front_Uniforme 1 283
                        OUEST Paroi_temperature_imposee Champ_Front_Uniforme 1 273
                }
                conditions_initiales { Temperature Champ_Fonc_Reprise keps_2D_VEF_Def_pb.xyz pb temperature fonction 1 val+273 last_time }
		modele_turbulence prandtl {  turbulence_paroi loi_standard_hydr_scalaire }
        }

	Postraitement
	{
		Sondes
		{
			K 		K   		periode 0.001 segment 51 0.5 0.0 0.5 1.0
			Eps 		Eps		periode 0.001 segment 51 0.5 0.0 0.5 1.0
			vitesse 	vitesse   	periode 0.001 segment 51 0.0 0.5 1.0 0.5
			temperature 	temperature 	periode 0.001 segment 51 0.0 0.5 1.0 0.5
		}
		Champs dt_post 2.
		{
			k elem
			eps elem
		}
	}
}

Solve pb
Fin

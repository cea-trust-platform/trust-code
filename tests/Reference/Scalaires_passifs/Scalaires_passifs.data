# Hydraulique 2D avec transport scalaire passif #
# PARALLEL OK 5 #
dimension 2

Pb_hydraulique_Concentration_Scalaires_Passifs pb
Domaine dom

# BEGIN MESH #
Mailler dom
{
	Pave Cavite 
		{
		Origine 0. 0.
		Nombre_de_Noeuds 11 11 
		Longueurs 1. 1.
		}
		{
		Bord Gauche X = 0. 0. <= Y <= 1.
		Bord Haut   Y = 1. 0. <= X <= 1.
		Bord Bas    Y = 0. 0. <= X <= 1.
		Bord Droit  X = 1. 0. <= Y <= 1.
		}
}

# END MESH #
# BEGIN PARTITION
Partition dom
{
	Partitionneur tranche { tranches 2 1 }
	Larg_joint 2
	Nom_Zones DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VDF dis

Scheme_euler_explicit sch
Read sch
{
	tinit 0
	tmax 2.
	dt_min 0.01
	dt_max 0.01
	dt_impr 0.01
	dt_sauv 100
	seuil_statio 1.e-8
}

Fluide_Incompressible fluide
Read fluide
{
	mu Champ_Uniforme 1 3.7e-05
	rho Champ_Uniforme 1 2
	beta_co Champ_Uniforme 1 0.
}

Constituant c1
Read c1
{
coefficient_diffusion Champ_Uniforme 1 0.01
}

Champ_Uniforme gravite
Read gravite 2 0 0

Associate fluide gravite
Associate pb dom
Associate pb sch
Associate pb fluide
Associate pb c1

Discretize pb dis

Read pb
{
	Navier_Stokes_standard
	{
		solveur_pression GCP { 
			precond ssor { omega 1.500000 } 
			seuil 1.000000e-06 
			impr 
		}
		convection { quick }
		diffusion { }
		conditions_initiales {
			vitesse Champ_Uniforme 2 1. 1.
		}
		boundary_conditions {
			Haut paroi_fixe
			Droit frontiere_ouverte_pression_imposee Champ_Front_Uniforme 1 0.
			Bas frontiere_ouverte_vitesse_imposee Champ_Front_Uniforme 2  1. 1.
			Gauche frontiere_ouverte_vitesse_imposee Champ_Front_Uniforme 2  1. 1.
		}		
	}
	Convection_diffusion_Concentration {
		diffusion { }
		convection { quick }
		boundary_conditions {
			Haut paroi_flux_impose Champ_Front_Uniforme 1 0.1
			Droit frontiere_ouverte C_ext Champ_Front_Uniforme 1 0.
			Gauche frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 1.
			Bas frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 0.
		}
		conditions_initiales {
			concentration Champ_Uniforme 1 0.5
		}
	}
	
	Equations_Scalaires_Passifs
	{
		Convection_diffusion_Concentration {
			diffusion { }
			convection { quick }
			boundary_conditions {
				Haut frontiere_ouverte C_ext Champ_Front_Uniforme 1 0.
				Droit frontiere_ouverte C_ext Champ_Front_Uniforme 1 0.
				Gauche frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 1.
				Bas frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 0.
			}
			conditions_initiales {
				concentration0 Champ_Uniforme 1 0.5
			}
		}
		Convection_diffusion_Concentration {
			diffusion { }
			convection { quick }
			boundary_conditions {
				Haut frontiere_ouverte C_ext Champ_Front_Uniforme 1 0.
				Droit frontiere_ouverte C_ext Champ_Front_Uniforme 1 0.
				Gauche frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 1.
				Bas frontiere_ouverte_concentration_imposee Champ_Front_Uniforme 1 0.
			}
			conditions_initiales {
				concentration1 Champ_Uniforme 1 0.1
			}
		}
		
	}

	Postraitement
	{
		Sondes
		{
			sonde_pres pression periode 0.01 points 1 0.45 0.45
			sonde_vit vitesse periode 0.01 points 1 0.4 0.45
			sonde_conc concentration periode 0.01 points 1 0.55 0.45
			sonde_conc0 concentration0 periode 0.01 points 1 0.55 0.45
			sonde_conc1 concentration1 periode 0.01 points 1 0.55 0.45
		}
		Champs dt_post 0.1
		{
			pression elem
			vitesse elem
			concentration elem
			concentration0 elem
			concentration1 elem
			
		}
	}
}

Solve pb
End


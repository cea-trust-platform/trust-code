#!/bin/bash

cp $TRUST_ROOT/tests/EOS/jdd EOS_test_cat2.data
cp $TRUST_ROOT/tests/EOS/__sample__ EOS_test_cat2.cpp
sed -i 's/liquid("__MODEL__", "__FLUID__")/liquid("EOS_Cathare2", "WaterLiquid")/g' EOS_test_cat2.cpp
sed -i 's/steam("__MODEL__", "__FLUID__")/steam("EOS_Cathare2", "WaterVapor")/g' EOS_test_cat2.cpp

# Ajout tirpc comme dans bin/mklibs
tirpc="" && [ "`grep tirpc $TRUST_EOS_HOME_DIR/lib/pkgconfig/eos.pc 2>/dev/null`" != "" ] && tirpc="-ltirpc"

$TRUST_CC_BASE -std=c++14 -Wall -o EOS_test_cat2.x -I$TRUST_EOS_HOME_DIR/include/ -I$TRUST_ROOT/include/ -I$TRUST_ROOT/include/EOS/ EOS_test_cat2.cpp $TRUST_EOS_HOME_DIR/lib/libeos.a $tirpc -lgfortran

./EOS_test_cat2.x &>out

if [ $? -eq 0 ]
then
  echo OK > is_ok
else
  rm -f is_ok
fi


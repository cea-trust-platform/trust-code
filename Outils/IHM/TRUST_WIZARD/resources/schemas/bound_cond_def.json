{
  "$schema": "http://json-schema.org/schema#",
  "id": "",
  "title": "Boundary conditions",
  "description": "Boundary conditions spec",
  
  "definitions" : 
    {  
     "group_name":  { "type": "string", "minLength": 1},
     "void_object": { "type": "object", "properties": {}, "additionalProperties": false},
     
     "temperature_wall":
      {
       "title": "Temperature",
       "type": "object", 
       "oneOf":
        [ { "title": "Adiabatic wall", 
            "properties": { "wall_type": { "enum": ["paroi_adiab"] } },
            "required": ["wall_type"], "additionalProperties": false
            },
          { "title": "Forced flux",
            "properties": 
              { 
                "wall_type": { "enum" : ["forced_flux"] },
                "value":     { "type": "number", "title": "Surfacic flux" }
              },
             "required": ["wall_type", "value"], "additionalProperties": false
          },
          { "title": "Forced temperature",
            "properties": 
              { 
                "wall_type": { "enum" : ["forced_temperature"] },
                "value":     { "type": "number", "title": "Temperature" }
              },
             "required": ["wall_type", "value"], "additionalProperties": false
          }
        ] 
      },
     
     "velocity_wall":
      {
        "title": "Velocity",
        "type": "string", 
        "enum": ["adherent", "sliding"]
      },
     
     "generic_symetry":
      {                   
         "title": "Symetry",
         "description": "Symetric boundary condition (no further info required)",
         "properties": 
            { 
              "group_name" :  { "$ref": "#/definitions/group_name"},
              "bc_type":      { "enum": ["symetry"]}
            },
         "required": ["group_name", "bc_type"]
      },
     
     "generic_periodic":
      {
       "title": "Periodic",
       "description": "Periodic boundary condition (no further info required)",
       "properties": 
          { 
           "group_name" : { "$ref": "#/definitions/group_name"},
           "bc_type":     { "enum": ["periodic"]}
          },
       "required": ["group_name", "bc_type"]
      },
     
      "generic_input":
      {  
         "title": "Input",
         "description": "Input boundary condition",
         "properties": 
            { 
              "group_name" : { "$ref": "#/definitions/group_name"},
              "bc_type": { "enum": ["input"]}
            },
         "required": ["group_name", "bc_type"]
      },

      "generic_output":
      {  
         "title": "Output",
         "description": "Output boundary condition",
         "properties": 
            { 
              "group_name" : { "$ref": "#/definitions/group_name"},
              "bc_type": { "enum": ["output"]}
            },
         "required": ["group_name", "bc_type"]
      },

      "generic_wall":
      {  
        "title": "Wall",
        "description": "Wall boundary condition",
        "gui_type": "object_flat",
        "properties": 
            { 
              "group_name" :  { "$ref": "#/definitions/group_name"},
              "bc_type":      { "enum": ["wall"]}
            },
         "required": ["group_name", "bc_type"]
      }
    }
}

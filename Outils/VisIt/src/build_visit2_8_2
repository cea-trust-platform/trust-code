{
  printf "%s%s\n" "EAVL_FILE=" "${EAVL_FILE}"
  printf "%s%s\n" "EAVL_VERSION=" "${EAVL_VERSION}"
  printf "%s%s\n" "EAVL_BUILD_DIR=" "${EAVL_BUILD_DIR}"
}


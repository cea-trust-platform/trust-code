inline Simd_float SimdDivideMed(const Simd_float & a, const Simd_float & b)
{
  __m256 x = _mm256_rcp_ps(b.data_); // x = approximation de 1/b
  __m256 y = _mm256_mul_ps(a.data_, x); // y = a * x

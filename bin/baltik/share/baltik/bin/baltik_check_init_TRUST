#! /usr/bin/env sh

# on regarde si TRUST_ROOT et TRUST_ROOT_ORG sont definis, si oui si ils sont bien identiques

if [ "$TRUST_ROOT" != "" ]
    then
    if [ "$TRUST_ROOT_ORG" != "" ]
	then
	if [ "$TRUST_ROOT_ORG" != "$TRUST_ROOT" ]
	    then 
	    echo "The project was configured with TRUST_ROOT $TRUST_ROOT_ORG and not with $TRUST_ROOT. You should initialize TRUST with \"source $TRUST_ROOT_ORG/env/env_TRUST.sh\"" 
	    unset TRUST_ROOT
	    exit 1
	fi	
    fi
else
# si seul  TRUST_ROOT_ORG pour l'instant on ne fait qu'un message ....
 if [ "$TRUST_ROOT_ORG" != "" ]
     then
    echo "The project was configured with TRUST_ROOT $TRUST_ROOT_ORG, you should initialize TRUST with \"source $TRUST_ROOT_ORG/env/env_TRUST.sh\""
    
    fi
    
fi

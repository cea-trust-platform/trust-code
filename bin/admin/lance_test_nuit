echo `grep -c ${TRUST_VERSION%_beta} $TRUST_ROOT/ToDo`" requests to do before the release of the next version"
nothing_todo=0 && [ "`grep ${TRUST_VERSION%_beta} $TRUST_ROOT/ToDo`" = "" ] && nothing_todo=1

	 echo "End of launch $MODULE tests on $HOST_BUILD with `basename $lance_test_exec` at `date`..."
	 
         #################################################
	 # Mesure les performances en // avec le BENCHMARK
	 #################################################
	 if [ "`$TRUST_ROOT/bin/admin/liste_machines "\-benchmark" | grep ^$HOST_BUILD"\."`" != "" ]
	 then

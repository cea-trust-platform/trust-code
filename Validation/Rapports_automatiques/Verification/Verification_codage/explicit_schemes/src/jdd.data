# Thermohydraulique 2D couplee a conduction 2D #
# PARALLEL OK 4 #
dimension 2
$sch sch
Read sch
{
    tinit 0.
    tmax 5.
    dt_min 1e-5
    dt_max 0.2
    dt_impr 1e-5
    diffusion_implicite $diff
    facsec $fsc
}

Pb_conduction pb1
Pb_Thermohydraulique pb2

Domaine dom_solide
Domaine dom_fluide

# BEGIN MESH #
Mailler dom_solide
{
    Pave Cavite1
    {
        Origine 0. 0.
        Nombre_de_Noeuds $N1
        Longueurs 0.3 1.0
    }
    {
        Bord paroi_a_40 			X = 0.   0.  <= Y <= 1.0
        Bord paroi_a_20   			Y = 1.0  0.  <= X <= 0.3
        Bord paroi_a_40    			Y = 0.   0.  <= X <= 0.3
        Raccord local homogene Paroi_echange  	X = 0.3  0.3 <= Y <= 1.0
    } ,
    Pave Cavite2
    {
        Origine 0.3 0.
        Nombre_de_Noeuds $N2
        Longueurs 0.7 0.3
    }
    {
        Raccord local homogene Paroi_echange   	Y = 0.3  0.3 <= X <= 1.0
        Bord paroi_a_40    			Y = 0.   0.3 <= X <= 1.0
        Bord paroi_a_20  			X = 1.0  0.  <= Y <= 0.3
    }
}

Mailler dom_fluide
{
    Pave Cavite3
    {
        Origine 0.3 0.3
        Nombre_de_Noeuds $N3
        Longueurs 0.7 0.7
    }
    {
        Raccord local homogene Paroi_echange    X = 0.3  0.3 <= Y <= 1.0
        Bord Entree    				Y = 1.0  0.3 <= X <= 0.7
        Bord Paroi     				Y = 1.0  0.7 <= X <= 1.0
        Raccord local homogene Paroi_echange    Y = 0.3  0.3 <= X <= 1.0
        Bord Sortie    				X = 1.0  0.3 <= Y <= 0.7
        Bord Paroi				X = 1.0  0.7 <= Y <= 1.0
    }
}

$trian
# END MESH #

# BEGIN PARTITION
Partition dom_solide
{
    Partition_tool metis { Nb_parts 2 }
    Larg_joint 1
    zones_name DOM1
}
Partition dom_fluide
{
    Partition_tool metis { Nb_parts 2 }
    Larg_joint 2
    zones_name DOM2
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM1.Zones dom_solide
Scatter DOM2.Zones dom_fluide
END SCATTER #

$dis dis

Associate pb1 dom_solide
Associate pb2 dom_fluide

Probleme_Couple pbc
Associate pbc pb1
Associate pbc pb2
Associate pbc sch
Discretize pbc dis

Read pb1
{
    Solide
    {
        rho Champ_Uniforme 1 1000.
        lambda Champ_Uniforme 1 250.
        Cp Champ_Uniforme 1 100.
    }

    Conduction
    {
        diffusion { }
        initial_conditions { temperature Champ_Uniforme 1 30. }
        boundary_conditions {
            paroi_a_40 paroi_temperature_imposee Champ_Front_Uniforme 1 40.
            paroi_a_20 paroi_temperature_imposee Champ_Front_Uniforme 1 20.
            Paroi_echange paroi_contact pb2 Paroi_echange
        }
    }
    Post_processing
    {
        Probes
        {
            SOL1 temperature periode 5. segment 100 0.15 0.0 0.15 1.0
            SOL2 temperature periode 5. segment 100 0.0 0.15 1.0 0.15
        }
        format cgns
        fichier pb1
        fields dt_post 300.
        {
            temperature elem
        }
    }
}

Read pb2
{
    Fluide_Incompressible
    {
        mu Champ_Uniforme 1 0.002
        rho Champ_Uniforme 1 2.
        lambda Champ_Uniforme 1 2.0
        Cp Champ_Uniforme 1 1000.
        beta_th Champ_Uniforme 1 0.0001
        gravite Champ_Uniforme 2 0 -9.81
    }

    Navier_Stokes_standard
    {
        solveur_pression petsc cholesky { }
        convection { amont }
        diffusion { }
        sources { boussinesq_temperature { T0 30. } }
        initial_conditions { vitesse Champ_Uniforme 2 0. 0. }
        boundary_conditions {
            Entree frontiere_ouverte_vitesse_imposee Champ_front_Uniforme 2 0. -0.01
            Sortie frontiere_ouverte_vitesse_imposee Champ_front_Uniforme 2 0.01 0.
            Paroi	paroi_fixe
            Paroi_echange	paroi_fixe
        }
    }
    Convection_Diffusion_Temperature
    {
        diffusion { }
        convection { amont }
        boundary_conditions
        {
            Entree frontiere_ouverte_temperature_imposee Champ_front_Uniforme 1 20.
            Sortie frontiere_ouverte_temperature_imposee Champ_front_Uniforme 1 20.
            Paroi_echange paroi_contact pb1 Paroi_echange
            Paroi paroi_temperature_imposee Champ_Front_Uniforme 1 20.
        }
        initial_conditions { Temperature Champ_Uniforme 1 30. }
    }
    Post_processing
    {
        Probes
        {
            FL1 temperature periode 5. segment 100 0.3 0.65 1.0 0.65
            FL2 temperature periode 5. segment 100 0.65 0.3 0.65 1.0
        }
        format cgns
        fichier pb2
        fields dt_post 300.
        {
            pression elem
            vitesse elem
            temperature elem
        }
    }
}
# Imprimer_flux dom_fluide { Paroi Entree } #
Solve pbc
End
